#include <ArduinoIoTCloud.h>
#include <Arduino_ConnectionHandler.h>

const char DEVICE_LOGIN_NAME[]  = "e30e5261-78b3-448f-8938-1cc2c4bfdacd";

const char SSID[]               = SECRET_SSID;    // Network SSID (name)
const char PASS[]               = SECRET_OPTIONAL_PASS;    // Network password (use for WPA, or use as key for WEP)
const char DEVICE_KEY[]  = SECRET_DEVICE_KEY;    // Secret device password

void onMoistureChange();
void onManualWaterChange();
void onPumpStateChange();

float moisture;
bool manual_water;
bool pump_state;

void initProperties(){

  ArduinoCloud.setBoardId(DEVICE_LOGIN_NAME);
  ArduinoCloud.setSecretDeviceKey(DEVICE_KEY);
  ArduinoCloud.addProperty(moisture, READWRITE, ON_CHANGE, onMoistureChange);
  ArduinoCloud.addProperty(manual_water, READWRITE, ON_CHANGE, onManualWaterChange);
  ArduinoCloud.addProperty(pump_state, READWRITE, ON_CHANGE, onPumpStateChange);

}

WiFiConnectionHandler ArduinoIoTPreferredConnection(SSID, PASS);
